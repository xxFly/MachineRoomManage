<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.bupt.bnrc.dao.ShiroDao">
    <select id="getUserByUserName" resultType="cn.edu.bupt.bnrc.pojo.User">
        select * FROM user
        WHERE user_name = #{0}
    </select>

    <select id="getUserRoleByUserId" resultType="java.lang.Integer">
        SELECT user_role FROM user
        where user_id = #{_parameter}
    </select>

    <select id="getPermissionIdsByRoleId" resultType="java.lang.Integer">
        SELECT per_id FROM role_permission a
        WHERE role_id = #{_parameter}
    </select>

    <select id="getPermissionById" resultType="cn.edu.bupt.bnrc.pojo.Permission">
        SELECT * FROM permission a
        WHERE per_id = #{_parameter}
    </select>
</mapper>